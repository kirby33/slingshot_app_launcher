<?xml version="1.0" encoding="UTF-8"?>
<schemalist>

  <enum id="org.gnome.shell.extensions.slingshot_app_launcher.menu_button_enum">
    <value nick="Icon and text" value="0" />
    <value nick="Only icon" value="1" />
    <value nick="Only text" value="2" />
  </enum>
  <schema path="/org/gnome/shell/extensions/slingshot_app_launcher/" id="org.gnome.shell.extensions.slingshot_app_launcher">
    <key type="b" name="hide-activities">
        <default>true</default>
        <summary>Put the Activities button inside Slingshot</summary>
        <description>Removes the Activities button from the top bar and puts it inside the applications menu.</description>
    </key>
    <key type="b" name="disable-activities-hotspot">
        <default>true</default>
        <summary>Disable the Activities (top left) hotspot</summary>
        <description>Disables the top left hotspot (that triggers the Activities mode).</description>
    </key>
    <key type="b" name="show-categories">
        <default>false</default>
        <summary>Show categories in menu</summary>
        <description>Clasifies the applications in categories, instead of showing them all mixed.</description>
    </key>
    <key type="b" name="maximize-menu">
        <default>false</default>
        <summary>Use the maximum screen area</summary>
        <description>Use the maximum screen area.</description>
    </key>
    <key name="menu-button" enum="org.gnome.shell.extensions.slingshot_app_launcher.menu_button_enum">
      <default>"Icon and text"</default>
      <summary>Style for the main button</summary>
      <description>Allows to customize the menu button</description>
    </key>
  </schema>
</schemalist>
